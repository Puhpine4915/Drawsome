@model List<Drawsome.Models.User>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Users</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
<h1>Manage Users</h1>
<table>
    <thead>
    <tr>
        <th>Username</th>
        <th>Score</th>
        <th>Is Admin</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Score</td>
            <td>@user.IsAdmin</td>
            <td>
                <a href="@Url.Action("EditUser", "Home", new { id = user.Id })">Edit</a>
                <a href="@Url.Action("DeleteUser", "Home", new { id = user.Id })" onclick="return confirm('Are you sure you want to delete @user.Username?')">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<button class="styledButton" onclick="location.href='@Url.Action("LobbySelection", "Home")'">Back to Lobby</button>
</body>
</html>